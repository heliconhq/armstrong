{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "plugins": ["react"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "strict": 0,
    "semi": 2,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "react/jsx-uses-vars": 1,
    "react/jsx-no-undef": [2],
    "func-names": [
      "warn",
      "as-needed"
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/tests.js",
          "**/*.test.js",
          "test/*.js"
        ]
      }
    ]
  },
  "env": {
    "browser": true,
    "mocha": true
  }
}
